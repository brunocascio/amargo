// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repository {
  id            String   @id @default(cuid())
  name          String   @unique
  type          RepositoryType
  format        RepositoryFormat // NPM, DOCKER, etc.
  description   String?
  upstreamUrl   String?  // For pull-through cache (proxy repos)
  isProxyEnabled Boolean @default(false)
  cacheTtl      Int      @default(3600) // TTL in seconds, default 1 hour
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  artifacts     Artifact[]
  storageConfig StorageConfig?
  groupMembers  RepositoryGroupMember[]

  @@map("repositories")
}

model RepositoryGroup {
  id          String   @id @default(cuid())
  name        String   @unique
  format      RepositoryFormat // All members must have same format
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     RepositoryGroupMember[]

  @@map("repository_groups")
}

model RepositoryGroupMember {
  id             String   @id @default(cuid())
  groupId        String
  repositoryId   String
  priority       Int      @default(0) // Lower number = higher priority
  createdAt      DateTime @default(now())

  group          RepositoryGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  repository     Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@unique([groupId, repositoryId])
  @@index([groupId, priority])
  @@map("repository_group_members")
}

model Artifact {
  id           String   @id @default(cuid())
  repositoryId String
  name         String
  version      String
  path         String   // Storage path/key
  size         BigInt
  checksum     String   // SHA256 or similar
  contentType  String
  metadata     Json?    // Package-specific metadata
  cacheTtl     Int?     // Override repository TTL if set
  lastAccessed DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  repository   Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@unique([repositoryId, name, version])
  @@index([repositoryId, name])
  @@index([lastAccessed])
  @@map("artifacts")
}

model StorageConfig {
  id           String      @id @default(cuid())
  repositoryId String      @unique
  provider     StorageProvider
  config       Json        // Provider-specific configuration
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  repository   Repository  @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@map("storage_configs")
}

model CacheEntry {
  id           String   @id @default(cuid())
  key          String   @unique  // Cache key (repository + artifact identifier)
  repositoryId String
  artifactPath String
  expiresAt    DateTime
  metadata     Json?    // Additional cache metadata
  createdAt    DateTime @default(now())

  @@index([expiresAt])
  @@index([repositoryId])
  @@map("cache_entries")
}

model DownloadStats {
  id           String   @id @default(cuid())
  repositoryId String
  artifactName String
  artifactVersion String
  downloadDate DateTime @default(now())
  ipAddress    String?
  userAgent    String?

  @@index([repositoryId, downloadDate])
  @@index([artifactName, downloadDate])
  @@map("download_stats")
}

enum RepositoryType {
  HOSTED   // Local/hosted repository
  PROXY    // Pull-through cache to upstream
  GROUP    // Group of repositories
}

enum RepositoryFormat {
  NPM
  PYPI
  DOCKER
  GO
  MAVEN
  NUGET
  GENERIC
}

enum StorageProvider {
  S3
  GCS
  AZURE_BLOB
  LOCAL
}